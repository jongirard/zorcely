<!DOCTYPE html>



<html>
<head>

  <div class="home-container">
  <div class="login-image">


  <title>Zorcely</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%# Zorcely... are you zerious? %>


</head>
<body class="authorized application">

<% if current_user %>
  <div class="navigation-main">
    <div class="col-md-6">
      <ul class="nav nav-pills">
      <li role="presentation"><%= link_to "Browse", organizations_path %></li>
      <li role="presentation"><%= link_to "Add Organization", new_organization_path %></li>
      <li role="presentation"><a href="#">View All Active</a></li>
    </ul>
    </div>
    <div class="col-md-6 right">
      <ul class="nav nav-pills username">
				  <li class="dropdown">
				    <a class="dropdown-toggle username" data-toggle="dropdown" href="#">
				       <%= current_user.fullname %><span class="caret"></span>
				    </a>
				    <ul class="dropdown-menu dropdown-menu-right" role="menu">
				     <li><%= link_to("<i class=\"fa fa-sign-out\"></i>Logout".html_safe, destroy_user_session_path, :method => :delete) %></li>
				    </ul>
				  </li>
				</ul>
    </div>
  </div>

  <% end %>

  <div class="container">
    <%= yield %>
  </div>



</body>
</html>
